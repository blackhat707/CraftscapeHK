{
  "name": "craftshk-ai-3.0",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "build": "vite build",
    "preview": "vite preview",
    "postinstall": "npm run server:install",
    "server:install": "npm --prefix server install",
    "server:build": "npm --prefix server run build",
    "server:seed": "npm --prefix server run seed",
    "server:start": "npm --prefix server run start",
    "server:start:prod": "npm --prefix server run start:prod",
    "server:dev": "npm --prefix server run start:dev",
    "build:stack": "npm run build && npm run server:build",
    "start:prod": "npm run server:start:prod",
    "dev:stack": "concurrently -k --restart-tries 0 \"npm run dev\" \"npm run server:dev\"",
    "dev:stack:watch": "nodemon --config nodemon.env.json"
  },
  "dependencies": {
    "@google/genai": "^1.20.0",
    "@nestjs/common": "^11.1.6",
    "@nestjs/core": "^11.1.6",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "framer-motion": "^12.23.19",
    "jsonwebtoken": "^9.0.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "sequelize": "^6.37.7",
    "sqlite3": "^5.1.7",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^5.0.0",
    "concurrently": "^9.1.0",
    "nodemon": "^3.1.7",
    "typescript": "~5.8.2",
    "vite": "^6.2.0"
  }
}
