{
    "$schema": "https://json.schemastore.org/nodemon",
    "watch": [
        ".env",
        ".env.*",
        "server/.env",
        "server/.env.*"
    ],
    "ext": "env",
    "ignore": [
        "node_modules"
    ],
    "delay": "200",
    "signal": "SIGTERM",
    "exec": "npm run dev:stack"
}